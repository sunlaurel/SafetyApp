<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LaughActivity"
    android:background="#141F45"
    android:id="@+id/container">

    <TextView
        android:id="@+id/tvLaughter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:padding="20dp"
        android:text="Fake laugh"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/manLaughStartBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:padding="10dp"
        android:text="Start Creepy Man Laughter"
        android:textSize="25dp"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toEndOf="@+id/tvLaughter"
        app:layout_constraintStart_toStartOf="@+id/tvLaughter"
        app:layout_constraintTop_toBottomOf="@+id/tvLaughter" />

    <Button
        android:id="@+id/womanLaughStartBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:padding="10dp"
        android:text="Start Creepy Woman Laughter"
        android:textSize="25dp"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toEndOf="@+id/manLaughEndBtn"
        app:layout_constraintStart_toStartOf="@+id/manLaughEndBtn"
        app:layout_constraintTop_toBottomOf="@+id/manLaughEndBtn" />

    <Button
        android:id="@+id/manLaughEndBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:padding="10dp"
        android:text="End Creepy Man Laughter"
        android:textSize="25dp"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toEndOf="@+id/manLaughStartBtn"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="@+id/manLaughStartBtn"
        app:layout_constraintTop_toBottomOf="@+id/manLaughStartBtn" />

    <Button
        android:id="@+id/womanLaughEndBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:padding="10dp"
        android:text="End Creepy Woman Laughter"
        android:textSize="25dp"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toEndOf="@+id/womanLaughStartBtn"
        app:layout_constraintStart_toStartOf="@+id/womanLaughStartBtn"
        app:layout_constraintTop_toBottomOf="@+id/womanLaughStartBtn" />

    <TextView
        android:id="@+id/tvFakeLaughterNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pretend as though you're the one laughing"
        android:textColor="@color/white"
        android:textAllCaps="true"
        android:gravity="center"
        android:fontFamily="sans-serif-light"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@+id/womanLaughEndBtn"/>

    <Button
        android:id="@+id/laughReturnBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:padding="10dp"
        android:text="Return to Sound List"
        android:textSize="15dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>